<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pragyan_dark_grey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.delta.nittfest.WelcomePage">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, "
        android:textColor="@color/pragyan_grey"
        android:textSize="30sp" />

    <Button
        android:id="@+id/couponSelect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeText"
        android:layout_margin="10dp"
        android:background="@drawable/button_style"
        android:padding="8dp"
        android:text="Coupon"
        android:textColor="@drawable/btnlog"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/couponSelect"
        android:layout_centerHorizontal="true"
        android:text="Click here for coupon instructions"

        android:textColor="@color/pragyan_grey"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/qr_code_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/helpText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible" />


</RelativeLayout>
